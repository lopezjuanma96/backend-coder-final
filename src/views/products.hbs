<h2><span id="userAlias">{{userData.alias}}</span> this is our catalogue!</h2>

{{#if userData.isAdmin}}
<h2>New Product:</h2>
<form class="addProductForm" id="addProductForm">
    <label class="formLabel">Name:</label>
    <input class="formInput" name="name">
    <label class="formLabel">Price:</label>
    <input class="formInput" name="price">
    <label class="formLabel">Image:</label>
    <input class="formInput formInputImage" name="thumbnail" type="file" accept="image/png, image/jpeg">
    <label class="formLabel">Stock:</label>
    <input class="formInput" name="stock">
    <div class="buttonRow">
        <button class="basicButton greenButton" id="addProductFormSendButton" type="button">Add</button>
        <button class="basicButton blueButton" type="reset">Clear</button>
    </div>
</form>
{{/if}}

<div class="productsBlock">
    {{#if prodData.exists}}
    <table class="productsTable" id="productsTable">
        <tr>
            <th>Name</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
        {{#each prodData.prods}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.price}}</td>
            <td>{{this.thumbnail}}</td>
        </tr>
        {{/each}}
    </table>
    {{else}}
    <h2 class="noProductsTitle">No products available!</h2>
    {{/if}}
    <table class="productsTable addedProducts" id="addedProducts">
    </table>
</div>

<a href="/"><button type="button" class="basicButton redButton">Go Back</button></a>